<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/inputbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:text="0"
        android:textColor="@color/black"
        android:textSize="56dp" />
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="40pt"
                android:text="AC"
                android:textSize="38sp"
                android:layout_marginRight="1pt"
                android:id="@+id/btAC"
                android:backgroundTint="#20B6B5"
                android:layout_weight="1"
                android:onClick="cleanInput"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="40pt"
                android:text="//"
                android:textSize="38sp"
                android:layout_marginRight="1pt"
                android:id="@+id/btplusminus"
                android:backgroundTint="#20B6B5"
                android:layout_weight="1"
                android:onClick="getOperator"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="40pt"
                android:text="%"
                android:textSize="38sp"
                android:layout_marginRight="1pt"
                android:backgroundTint="#20B6B5"
                android:id="@+id/btpercent"
                android:layout_weight="1"
                android:onClick="getOperator"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="40pt"
                android:text="/"
                android:textSize="38sp"
               android:layout_weight="1"
                android:backgroundTint="#20B6B5"
                android:id="@+id/btdivide"
                android:onClick="getOperator"/>

        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="40pt"
                android:text="7"
                android:textSize="38sp"
                android:layout_marginRight="1pt"
                android:id="@+id/btseven"
                android:backgroundTint="#20B6B5"
                android:layout_weight="1"
                android:onClick="getNumbers"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="40pt"
                android:text="8"
                android:textSize="38sp"
                android:layout_marginRight="1pt"
                android:id="@+id/bteight"
                android:layout_weight="1"
                android:backgroundTint="#20B6B5"
                android:onClick="getNumbers"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="40pt"
                android:text="9"
                android:textSize="38sp"
                android:layout_marginRight="1pt"
                android:id="@+id/btnine"
                android:layout_weight="1"
                android:backgroundTint="#20B6B5"
                android:onClick="getNumbers"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="40pt"
                android:text="x"
                android:textSize="38sp"
                android:layout_weight="1"
                android:backgroundTint="#20B6B5"
                android:id="@+id/btmutiply"
                android:onClick="getOperator"/>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="40pt"
                android:text="4"
                android:textSize="38sp"
                android:layout_marginRight="1pt"
                android:id="@+id/btfour"
                android:layout_weight="1"
                android:backgroundTint="#20B6B5"
                android:onClick="getNumbers"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="40pt"
                android:text="5"
                android:textSize="38sp"
                android:layout_marginRight="1pt"
                android:id="@+id/btfive"
                android:layout_weight="1"
                android:backgroundTint="#20B6B5"
                android:onClick="getNumbers"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="40pt"
                android:text="6"
                android:textSize="38sp"
                android:layout_marginRight="1pt"
                android:id="@+id/btsix"
                android:layout_weight="1"
                android:backgroundTint="#20B6B5"
                android:onClick="getNumbers"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="40pt"
                android:text="-"
                android:textSize="38sp"
                android:layout_weight="1"
                android:backgroundTint="#20B6B5"
                android:id="@+id/btminus"
                android:onClick="getOperator"/>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="40pt"
                android:text="1"
                android:textSize="38sp"
                android:layout_marginRight="1pt"
                android:id="@+id/btone"
                android:backgroundTint="#20B6B5"
                android:layout_weight="1"
                android:onClick="getNumbers"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="40pt"
                android:text="2"
                android:textSize="38sp"
                android:layout_marginRight="1pt"
                android:id="@+id/bttwo"
                android:layout_weight="1"
                android:backgroundTint="#20B6B5"
                android:onClick="getNumbers"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="40pt"
                android:text="3"
                android:textSize="38sp"
                android:layout_marginRight="1pt"
                android:id="@+id/btthree"
                android:layout_weight="1"
                android:backgroundTint="#20B6B5"
                android:onClick="getNumbers"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="40pt"
                android:text="+"
                android:textSize="38sp"
                android:layout_weight="1"
                android:backgroundTint="#20B6B5"
                android:id="@+id/btadd"
                android:onClick="getOperator"/>

        </TableRow>



    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="40pt"
            android:text="0"
            android:id="@+id/bt0"
            android:textSize="38sp"
            android:layout_weight="1"
            android:onClick="getNumbers"
            android:backgroundTint="#20B6B5"
            android:layout_marginRight="1pt"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="40pt"
            android:text="."
            android:layout_weight="1"
            android:id="@+id/btdot"
            android:textSize="38sp"
            android:backgroundTint="#20B6B5"
            android:onClick="getNumbers"
            android:layout_marginRight="1pt"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="40pt"
            android:text="="
            android:layout_weight="1"
            android:id="@+id/btequal"
            android:textSize="38sp"
            android:backgroundTint="#20B6B5"
            android:onClick="equaloperator"
            android:layout_marginRight="1pt"/>
  </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="40pt"
            android:text="com"
            android:id="@+id/btcom"
            android:textSize="20sp"
            android:layout_weight="1"
            android:backgroundTint="#20B6B5"
            android:onClick="getOperator"
            android:layout_marginRight="1pt"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="40pt"
            android:text="prime"
            android:layout_weight="1"
            android:id="@+id/btprime"
            android:textSize="20sp"
            android:onClick="getOperator"
            android:backgroundTint="#20B6B5"
            android:layout_marginRight="1pt"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="40pt"
            android:text="fac"
            android:layout_weight="1"
            android:id="@+id/btfac"
            android:textSize="20sp"
            android:onClick="getOperator"
            android:backgroundTint="#20B6B5"
            android:layout_marginRight="1pt"/>
    </LinearLayout>

</LinearLayout>
